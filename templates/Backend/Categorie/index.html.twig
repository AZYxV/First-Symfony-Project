{% extends "layout.html.twig" %}
{% block title %}
Admin | {{ parent() }}
{% endblock %}
{% block body %}
<section class="container mt-4">
    <h1 class="text-center">Admin des categorie</h1>
    <a href="{{ path('app_categorie_new') }}" class="btn btn-dark primary">Nouvelle catégorie</a>
    <div class="d-flex flex-wrap justify-content-around gap-2 mt-4">
        {% for categorie in categories %}
        {# {{ dump(categorie)}} #}
            <div class="card rounded border border-white shadow p-3 mb-5 bg-body rounded" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ categorie.id }}. {{ categorie.titre }}</h5>
                    <div class="form-check form-switch d-flex justify-content-center gap-2 mt-4">
                        <input class="form-check-input" type="checkbox" role="switch" value="{{ categorie.id}}" data-switch-active-tag {{ categorie.enable ? "checked"}}>
                        <label class="form-check-label">Actif</label>
                    </div>
                    <div class="d-flex justify-content-around gap-2 mt-4">
                        <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="card-link btn btn-warning">Modifier</a>
                    {% include "Backend/Categorie/_delete_form.html.twig" %}
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucune catégorie</p>
        {% endfor %}
    </div>
</section>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}
