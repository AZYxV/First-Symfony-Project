{% extends "layout.html.twig" %}
{% block title %}
Admin | Categories
{% endblock %}
{% block body %}

<section class="container mt-4">
    <h1 class="text-center">Admin des categorie</h1>
    <a href="{{ path('app_categorie_new') }}" class="btn btn-dark primary">Nouvelle catégorie</a>
    <div class="d-flex flex-wrap justify-content-between gap-2 mt-4">
        {% for categorie in categories %}
        {{ dump(categorie)}}
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ categorie.id }}. {{ categorie.titre }}</h5>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" value="{{ categorie.id}}" {{ categorie.enable ? "checked"}}>
                        <label class="form-check-label">Actif</label>
                    </div>
                    <div class="d-flex">
                        <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="card-link btn btn-warning">Modifier</a>
                    {% include "Backend/Categorie/_delete_form.html.twig" %}
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucune catégorie</p>
        {% endfor %}
    </div>
</section>
{% endblock %}
